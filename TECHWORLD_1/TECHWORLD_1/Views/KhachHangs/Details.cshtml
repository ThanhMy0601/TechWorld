@model TECHWORLD_1.Models.KhachHang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">


        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">
            Dashboard <small>reports & statistics</small>
        </h3>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a asp-controller="AdminHome" asp-action="Index">Trang chủ</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a asp-controller="KhachHangs" asp-action="Index">Khách hàng</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a asp-controller="KhachHangs" asp-action="Details">ChiTiet</a>
                </li>
            </ul>
            <div class="page-toolbar">
                <div id="dashboard-report-range" class="pull-right tooltips btn btn-fit-height grey-salt" data-placement="top" data-original-title="Change dashboard date range">
                    <i class="icon-calendar"></i>&nbsp;
                    <span class="thin uppercase visible-lg-inline-block">&nbsp;</span>&nbsp;
                    <i class="fa fa-angle-down"></i>
                </div>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN DASHBOARD STATS -->

        <hr />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Mã KH</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.MaKh) " readonly />

                </div>
                <div class="form-group">
                    <label class="control-label">Tên tài khoản</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.TaiKhoan) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Tên khách hàng</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.HoTen) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Avata</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Hinh) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.Email) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Điện thoại</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.DienThoai) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Địa chỉ</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.DiaChi) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Giới tính</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.GioiTinh) " readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Ngày sinh</label>
                    <input class="form-control" value="@Html.DisplayFor(model => model.NgaySinh) " readonly />
                </div>             

            </div>
        </div>
        <div>
            <a asp-action="Index" style="font-size:17px; text-decoration: none;">Quay lại danh sách</a>
        </div>

        <!-- END DASHBOARD STATS -->
        <div class="clearfix">
        </div>

    </div>
</div>
<!-- END CONTENT -->